<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McpServiceNetFx"
        mc:Ignorable="d"
        Title="Visual Studio MCP 服务器" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl x:Name="TabControlMain">
            <TabItem Header="服务管理">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="TxtSearch" Width="300" Height="25" Margin="0,0,10,0"/>
                        <Button x:Name="BtnRefresh" Content="刷新" Width="80" Height="25"/>
                    </StackPanel>

                    <DataGrid x:Name="DgVsInstances" Grid.Row="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="窗口标题" Binding="{Binding Caption}" Width="*"/>
                            <DataGridTextColumn Header="解决方案路径" Binding="{Binding SolutionPath}" Width="2*"/>
                            <DataGridTextColumn Header="版本" Binding="{Binding Version}" Width="100"/>
                            <DataGridTextColumn Header="进程ID" Binding="{Binding ProcessId}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
      
                    <GroupBox Grid.Row="2" Header="服务设置" Margin="0,0,0,0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="实例:" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtSelectedInstance" Grid.Row="0" Grid.Column="1"
                                       Text="请在上方列表中选择实例" VerticalAlignment="Center" Margin="10,0,0,0"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="端口号:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <TextBox x:Name="TxtPort" Grid.Row="1" Grid.Column="1" Height="25"
                                     Margin="10,10,10,0" Text="38080"/>
                            <Button x:Name="BtnStartService" Grid.Row="1" Grid.Column="2"
                                    Content="启动服务" Width="100" Height="25" Margin="0,10,0,0"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="状态:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <TextBlock x:Name="TxtServiceStatus" Grid.Row="2" Grid.Column="1"
                                       Text="服务未启动" VerticalAlignment="Center" Margin="10,10,0,0"/>
                            <Button x:Name="BtnStopService" Grid.Row="2" Grid.Column="2"
                                    Content="停止服务" Width="100" Height="25" Margin="0,10,0,0"
                                    IsEnabled="False"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="客户端配置:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                                <TabControl x:Name="TabClientConfig" Visibility="Collapsed">
                                    <TabItem Header="JSON 配置">
                                        <TextBox x:Name="TxtJsonConfig" Margin="5"
                                                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"
                                                 FontFamily="Consolas" FontSize="11"
                                                 Text="将此配置添加到您的 MCP 客户端配置文件中"/>
                                    </TabItem>
                                    <TabItem Header="Claude CLI 配置">
                                        <TextBox x:Name="TxtClaudeConfig" Margin="5"
                                                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"
                                                 FontFamily="Consolas" FontSize="11"
                                                 Text="运行此命令添加 MCP 服务器到 Claude Desktop"/>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- MCP 功能授权选项卡 -->
            <TabItem Header="MCP 功能授权">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="BtnAllowAll" Content="全部允许" Width="100" Height="25"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnAskAll" Content="全部询问" Width="100" Height="25"
                                Margin="0,0,10,0"/>
                    </StackPanel>

                    <DataGrid x:Name="DgPermissions" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="功能名称" Binding="{Binding FeatureName}" Width="*"/>
                            <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="2*"/>
                            <DataGridComboBoxColumn Header="权限" Width="120" x:Name="PermissionColumn"
                                                    SelectedValueBinding="{Binding Permission}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="BtnSavePermissions" Content="保存配置" Width="100" Height="25"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnReloadPermissions" Content="重新加载" Width="100" Height="25"/>
                    </StackPanel>
                </Grid>
            </TabItem>

    
            <!-- 日志选项卡 -->
            <TabItem Header="日志">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="BtnClearLogs" Content="清空日志" Width="100" Height="25"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnExportLogs" Content="导出日志" Width="100" Height="25"/>
                    </StackPanel>

                    <DataGrid x:Name="DgLogs" Grid.Row="1" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="时间" Binding="{Binding Timestamp}" Width="150"/>
                            <DataGridTextColumn Header="操作" Binding="{Binding Operation}" Width="*"/>
                            <DataGridTextColumn Header="结果" Binding="{Binding Result}" Width="100"/>
                            <DataGridTextColumn Header="详情" Binding="{Binding Details}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
