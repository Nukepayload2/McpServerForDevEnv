<UserControl x:Class="ToolWindows.McpToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="350">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#007ACC" Padding="10,8">
            <TextBlock Text="MCP 工具管理器"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"/>
        </Border>

        <!-- MCP 工具授权管理 -->
        <GroupBox Grid.Row="1" Header="MCP 工具授权" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="ToolsDataGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="工具名称" Binding="{Binding ToolName}" Width="*" IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="授权" Binding="{Binding IsAuthorized}" Width="60"/>
                        <DataGridCheckBoxColumn Header="启用" Binding="{Binding IsEnabled}" Width="60"/>
                        <DataGridTextColumn Header="使用次数" Binding="{Binding UsageCount}" Width="70" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="AuthorizeAllButton" Content="全部授权" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
                    <Button x:Name="RevokeAllButton" Content="撤销授权" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#DC3545" Foreground="White" BorderBrush="#DC3545"/>
                    <Button x:Name="RefreshToolsButton" Content="刷新" Width="50" Height="24"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- MCP 服务管理 -->
        <GroupBox Grid.Row="2" Header="MCP 服务状态" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="ServicesDataGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="服务名称" Binding="{Binding ServiceName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="端口" Binding="{Binding Port}" Width="50" IsReadOnly="True"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="70" IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="运行" Binding="{Binding IsRunning}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="StartAllButton" Content="全部启动" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#28A745" Foreground="White" BorderBrush="#28A745"/>
                    <Button x:Name="StopAllButton" Content="全部停止" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#DC3545" Foreground="White" BorderBrush="#DC3545"/>
                    <Button x:Name="RefreshServicesButton" Content="刷新" Width="50" Height="24"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 状态栏 -->
        <Border Grid.Row="3" Background="#E9ECEF" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusText" Text="就绪" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ToolCountText" Text="工具: 4" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ServiceCountText" Text="服务: 2" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>