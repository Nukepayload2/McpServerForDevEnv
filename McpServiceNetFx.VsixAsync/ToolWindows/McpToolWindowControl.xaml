<UserControl x:Class="ToolWindows.McpToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="350">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#007ACC" Padding="10,8">
            <TextBlock Text="MCP 服务管理器"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"/>
        </Border>

        <!-- MCP 工具授权管理 -->
        <GroupBox Grid.Row="1" Header="MCP 工具授权" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="ToolsDataGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="工具名称" Binding="{Binding ToolName}" Width="*" IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="授权" Binding="{Binding IsAuthorized}" Width="60"/>
                        <DataGridCheckBoxColumn Header="启用" Binding="{Binding IsEnabled}" Width="60"/>
                        <DataGridTextColumn Header="使用次数" Binding="{Binding UsageCount}" Width="70" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="AuthorizeAllButton" Content="全部授权" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
                    <Button x:Name="RevokeAllButton" Content="撤销授权" Width="70" Height="24" Margin="0,0,5,0"
                            Background="#DC3545" Foreground="White" BorderBrush="#DC3545"/>
                    <Button x:Name="RefreshToolsButton" Content="刷新" Width="50" Height="24"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- MCP 服务管理 -->
        <GroupBox Grid.Row="2" Header="MCP 服务状态" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 服务状态显示 -->
                <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="MCP 服务" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="ServiceStatusText" Text="状态: 已停止" Margin="0,2,0,0"/>
                            <TextBlock x:Name="ServicePortText" Text="端口: 3000" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton x:Name="ServiceToggleButton" Grid.Column="1" Content="启动服务"
                                      Width="80" Height="30" Margin="10,0,0,0"
                                      Background="#28A745" Foreground="White" BorderBrush="#28A745"/>
                    </Grid>
                </Border>

                <!-- 配置示例 -->
                <TabControl Grid.Row="1">
                    <TabItem Header="MCP JSON 配置">
                        <TextBox x:Name="McpJsonConfigTextBox"
                                 Background="White"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Margin="0"/>
                    </TabItem>
                    <TabItem Header="Claude CLI 配置">
                        <TextBox x:Name="ClaudeCliConfigTextBox"
                                 Background="White"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Margin="0"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </GroupBox>

        <!-- ActivityLog 信息 -->
        <GroupBox Grid.Row="3" Header="Visual Studio ActivityLog" Margin="5" Padding="8">
            <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="所有操作日志已记录到 Visual Studio ActivityLog"
                               FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="查看 ActivityLog 的方法：" Margin="0,0,0,5"/>
                    <TextBlock Text="1. 帮助 → Visual Studio ActivityLog" Margin="10,0,0,3"/>
                    <TextBlock Text="2. 或按 Ctrl+Alt+L 快捷键" Margin="10,0,0,3"/>
                    <TextBlock Text="3. 日志文件位置: %APPDATA%\Microsoft\VisualStudio\17.0_*\ActivityLog.xml"
                               Margin="10,0,0,3" TextWrapping="Wrap"/>
                    <Separator Margin="0,8,0,8"/>
                    <TextBlock Text="当前 MCP 服务管理器的所有操作（服务启动/停止、工具授权等）"
                               TextWrapping="Wrap" Foreground="#666666"/>
                </StackPanel>
            </Border>
        </GroupBox>

        <!-- 状态栏 -->
        <Border Grid.Row="4" Background="#E9ECEF" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusText" Text="就绪" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ToolCountText" Text="工具: 4" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ServiceCountText" Text="服务: 2" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>