<UserControl x:Class="ToolWindows.McpToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:McpServiceNetFx.VsixAsync.ToolWindows"
             xmlns:core="clr-namespace:McpServiceNetFx;assembly=McpServiceNetFx.Core"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="350">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- MCP 工具授权管理 -->
        <GroupBox Grid.Row="0" Header="MCP 工具授权" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 批量操作按钮 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <Button x:Name="AuthorizeAllButton" Content="全部允许" Margin="0,0,10,0" Padding="12,4"
                            Background="#28A745" Foreground="White" BorderBrush="#28A745"/>
                    <Button x:Name="AskAllButton" Content="全部询问" Margin="0,0,10,0" Padding="12,4"
                            Background="#FFC107" Foreground="Black" BorderBrush="#FFC107"/>
                    <Button x:Name="RefreshToolsButton" Content="刷新工具列表" Padding="12,4"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                </StackPanel>

                <!-- 工具权限数据网格 -->
                <DataGrid x:Name="ToolsDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="功能名称" Binding="{Binding FeatureName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="1.5*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="权限级别" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{x:Static core:PermissionLevels.Value}"
                                              SelectedItem="{Binding Permission, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Margin="2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                </DataGrid>

                <!-- 底部操作按钮 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="SavePermissionsButton" Content="保存权限配置" Margin="0,0,10,0" Padding="12,4"
                            Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
                    <Button x:Name="ReloadPermissionsButton" Content="重新加载" Padding="12,4"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- MCP 服务管理 -->
        <GroupBox Grid.Row="1" Header="MCP 服务状态" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 服务状态显示 -->
                <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="MCP 服务" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="ServiceStatusText" Text="状态: 已停止" Margin="0,2,0,0"/>
                            <TextBlock x:Name="ServicePortText" Text="端口: 38080" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton x:Name="ServiceToggleButton" Grid.Column="1" Content="启动服务"
                                      Margin="10,0,0,0" Padding="16,8"
                                      Background="#28A745" Foreground="White" BorderBrush="#28A745"/>
                    </Grid>
                </Border>

                <!-- 配置示例 -->
                <TabControl Grid.Row="1">
                    <TabItem Header="MCP JSON 配置">
                        <TextBox x:Name="McpJsonConfigTextBox"
                                 Background="White"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Margin="0"/>
                    </TabItem>
                    <TabItem Header="Claude CLI 配置">
                        <TextBox x:Name="ClaudeCliConfigTextBox"
                                 Background="White"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Margin="0"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </GroupBox>

        <!-- ActivityLog 信息 -->
        <GroupBox Grid.Row="2" Header="Visual Studio ActivityLog" Margin="5" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 操作按钮区域 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <Button x:Name="ClearLogButton" Content="清空日志" Margin="0,0,5,0" Padding="12,4"
                            Background="#6C757D" Foreground="White" BorderBrush="#6C757D"/>
                    <Button x:Name="ViewActivityLogHelpButton"
                            Content="如何查看文件日志" Padding="12,4"
                            Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
                </StackPanel>

                <!-- 日志数据网格 -->
                <DataGrid x:Name="ActivityLogDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserSortColumns="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          FontFamily="Consolas"
                          FontSize="11">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="时间" Binding="{Binding Timestamp}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="级别" Binding="{Binding Level}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="分类" Binding="{Binding Category}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="消息" Binding="{Binding Message}" Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 状态栏 -->
        <Border Grid.Row="3" Background="#E9ECEF" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusText" Text="就绪" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ToolCountText" Text="工具: 4" VerticalAlignment="Center"/>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="ServiceCountText" Text="服务: 2" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>