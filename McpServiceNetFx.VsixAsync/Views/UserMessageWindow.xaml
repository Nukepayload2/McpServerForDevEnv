<Window x:Class="UserMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:McpServiceNetFx.My.Resources;assembly=McpServiceNetFx.Core"
        xmlns:vs_shell="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
        xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.UserMessageTitle}"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
        Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}">

    <Window.Resources>
        <!-- 消息区域样式 -->
        <Style x:Key="MessageAreaStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 消息区域 -->
        <Border Grid.Row="0" Style="{StaticResource MessageAreaStyle}">
            <StackPanel>
                <!-- 消息标签 -->
                <Label x:Name="MessageLabel"
                       Content="{x:Static res:Resources.MessageLabel}"
                       FontWeight="Bold"
                       Margin="0,0,0,4"
                       Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}"/>

                <!-- 消息文本 -->
                <TextBlock x:Name="MessageTextBlock"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            </StackPanel>
        </Border>

        <!-- 命令文本框 -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowBorderBrushKey}}"
                BorderThickness="1"
                Margin="0,0,0,8">
            <TextBox x:Name="CommandTextBox"
                     Style="{DynamicResource {x:Static vs:VsResourceKeys.ThemedDialogTextBoxStyleKey}}"
                     IsReadOnly="True"
                     MinHeight="140"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     BorderThickness="0"
                     Background="Transparent"/>
        </Border>

        <!-- 按钮面板 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="CloseButton"
                    Content="{x:Static res:Resources.ButtonClose}"
                    MinWidth="80"
                    Margin="8,0,0,0"
                    IsCancel="True"
                    Style="{DynamicResource {x:Static vs:VsResourceKeys.ThemedDialogButtonStyleKey}}"/>
        </StackPanel>
    </Grid>
</Window>