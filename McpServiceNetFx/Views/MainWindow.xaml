<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McpServiceNetFx"
        mc:Ignorable="d" Background="#F7F7F7"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:res="clr-namespace:McpServiceNetFx.My.Resources"
        Title="{x:Static res:Resources.AppTitle}" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl x:Name="TabControlMain">
            <TabItem Header="服务管理">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,8">
                        <TextBox x:Name="TxtSearch" Width="300" Margin="0,0,10,0"/>
                        <Button x:Name="BtnRefresh" Content="刷新" Width="80"/>
                    </StackPanel>

                    <ui:DataGrid x:Name="DgVsInstances" Grid.Row="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <ui:DataGrid.Columns>
                            <DataGridTextColumn Header="窗口标题" Binding="{Binding Caption}" Width="*" FontSize="12"/>
                            <DataGridTextColumn Header="解决方案路径" Binding="{Binding SolutionPath}" Width="2*" FontSize="12"/>
                            <DataGridTextColumn Header="版本" Binding="{Binding Version}"/>
                            <DataGridTextColumn Header="进程ID" Binding="{Binding ProcessId}"/>
                        </ui:DataGrid.Columns>
                    </ui:DataGrid>
      
                    <GroupBox Grid.Row="2" Header="服务设置" Margin="0,0,0,0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="实例:" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtSelectedInstance" Grid.Row="0" Grid.Column="1"
                                       Text="请在上方列表中选择实例" VerticalAlignment="Center" Margin="10,0,0,0"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="端口号:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <TextBox x:Name="TxtPort" Grid.Row="1" Grid.Column="1"
                                     Margin="10,10,10,0" Text="38080"/>
                            <Button x:Name="BtnStartService" Grid.Row="1" Grid.Column="2"
                                    Content="启动服务" Width="100" Margin="0,10,0,0"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="状态:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <TextBlock x:Name="TxtServiceStatus" Grid.Row="2" Grid.Column="1"
                                       Text="服务未启动" VerticalAlignment="Center" Margin="10,10,0,0"/>
                            <Button x:Name="BtnStopService" Grid.Row="2" Grid.Column="2"
                                    Content="停止服务" Width="100" Margin="0,10,0,0"
                                    IsEnabled="False"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="客户端配置:" VerticalAlignment="Center"
                                    Margin="0,10,0,0"/>
                            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                                <TabControl x:Name="TabClientConfig" Visibility="Collapsed">
                                    <TabItem Header="JSON 配置">
                                        <TextBox x:Name="TxtJsonConfig" Margin="5"
                                                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"
                                                 FontFamily="Consolas" FontSize="11"
                                                 Text="将此配置添加到您的 MCP 客户端配置文件中"/>
                                    </TabItem>
                                    <TabItem Header="Claude CLI 配置">
                                        <TextBox x:Name="TxtClaudeConfig" Margin="5"
                                                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"
                                                 FontFamily="Consolas" FontSize="11"
                                                 Text="运行此命令添加 MCP 服务器到 Claude Desktop"/>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- MCP 功能授权选项卡 -->
            <TabItem Header="MCP 功能授权">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,8">
                        <Button x:Name="BtnAllowAll" Content="全部允许" Width="100"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnAskAll" Content="全部询问" Width="100"
                                Margin="0,0,10,0"/>
                    </StackPanel>

                    <ui:DataGrid x:Name="DgPermissions" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <ui:DataGrid.Columns>
                            <DataGridTextColumn Header="功能名称" Binding="{Binding FeatureName}"/>
                            <DataGridTextColumn Header="描述" Binding="{Binding Description}"/>
                            <DataGridTemplateColumn Header="权限" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{x:Static local:PermissionLevels.Value}"
                                          SelectedItem="{Binding Permission, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEditable="False"
                                          Background="Transparent"
                                          BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </ui:DataGrid.Columns>
                    </ui:DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="BtnSavePermissions" Content="保存配置" Width="100"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnReloadPermissions" Content="重新加载" Width="100"/>
                    </StackPanel>
                </Grid>
            </TabItem>

    
            <!-- 日志选项卡 -->
            <TabItem Header="日志">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,8">
                        <Button x:Name="BtnClearLogs" Content="清空日志" Width="100"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnExportLogs" Content="导出日志" Width="100"/>
                    </StackPanel>

                    <DataGrid x:Name="DgLogs" Grid.Row="1" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="时间" Binding="{Binding Timestamp}" Width="150"/>
                            <DataGridTextColumn Header="操作" Binding="{Binding Operation}" Width="*"/>
                            <DataGridTextColumn Header="结果" Binding="{Binding Result}" Width="100"/>
                            <DataGridTextColumn Header="详情" Binding="{Binding Details}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="关于">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="28" Margin="4">关于本软件</TextBlock>
                    <TextBlock Grid.Row="1" FontSize="14" Margin="4" TextWrapping="Wrap">© 2025 Nukepayload2<LineBreak/>
                        本软件在 Apache License 2.0 下分发，永久免费。<LineBreak/>
                        本软件受到中国和国际版权保护，倒卖将面临法律制裁。<LineBreak/>
                        隐私协议：本软件收集你的 Microsoft Visual Studio 项目信息用于支撑基本功能，并且信息仅保存在本地。<LineBreak/>
                        本软件不支持信息远程传输，仅能将信息在本地网络回环传输。</TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
