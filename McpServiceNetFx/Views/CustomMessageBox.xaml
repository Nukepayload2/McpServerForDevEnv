<Window x:Class="CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:McpServiceNetFx.My.Resources"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.CustomMessageBoxTitle}"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message Panel -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Border x:Name="IconBorder"
                    Width="72"
                    Height="72"
                    CornerRadius="36"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center">
                <TextBlock x:Name="IconTextBlock"
                           FontSize="32"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="MessageTextBlock"
                       TextWrapping="Wrap"
                       MaxWidth="300"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="YesButton"
                    Content="{x:Static res:Resources.ButtonYes}"
                    MinWidth="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Visibility="Collapsed"
                    />
            <Button x:Name="NoButton"
                    Content="{x:Static res:Resources.ButtonNo}"
                    MinWidth="80"
                    IsCancel="True"
                    Visibility="Collapsed"
                    />
            <Button x:Name="OKButton"
                    Content="{x:Static res:Resources.ButtonOK}"
                    MinWidth="80"
                    IsDefault="True"
                    IsCancel="True"
                    Visibility="Collapsed"
                    />
        </StackPanel>
    </Grid>
</Window>